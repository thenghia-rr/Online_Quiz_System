@using Online_Quiz_System.Common
@{
    ViewBag.Title = "Admin Dashboard ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var ListCount = (Dictionary<string, int>)Model;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title> Admin Dashboard </title>

    <!-- Custom fonts for this template-->
    <link href="~/Assets/AdminPage/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Assets/AdminPage/css/sb-admin-2.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                    </div>
                    <!-- Content Row -->
                    <div class="row" style="display: flex; flex-wrap: wrap;">
                        <!--  Quản Trị Viên -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <a href="@Url.Action("AdminManager")" style="cursor: pointer">
                                <div class="card border-left-primary shadow h-60 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg font-weight-bold text-primary text-uppercase mb-2">
                                                    Quản Trị Viên
                                                </div>

                                                <div class="h4 mb-0 font-weight-bold text-gray-800">  @ListCount["CountAdmin"]   </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-user-circle fa-3x text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!--  Giảng Viên -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <a href="@Url.Action("TeacherManager")" style="cursor: pointer">
                                <div class="card border-left-success shadow h-60 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg font-weight-bold text-success text-uppercase mb-1">
                                                    Giáo Viên
                                                </div>
                                                <div class="h4 mb-0 font-weight-bold text-gray-800">  @ListCount["CountTeacher"]  </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-user-circle fa-3x text-gray-400"></i>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- Sinh Viên -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <a href="@Url.Action("StudentManager")" style="cursor: pointer">
                                <div class="card border-left-info shadow h-60 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg font-weight-bold text-info text-uppercase mb-1">
                                                    Học Viên
                                                </div>
                                                <div class="h4 mb-0 font-weight-bold text-gray-800">
                                                    @ListCount["CountStudent"]
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-user-circle fa-3x text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!--  Số Khoá/ Khối học  -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <a href="@Url.Action("ClassManager")" style="cursor:pointer">
                                <div class="card border-left-warning shadow h-60 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg font-weight-bold text-warning text-uppercase mb-1">
                                                    Khối học
                                                </div>
                                                <div class="h4 mb-0 font-weight-bold text-gray-800">
                                                    @ListCount["CountGrade"]
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-address-card fa-3x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!--  Số Lớp học  -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <a href="@Url.Action("ClassManager")" style="cursor:pointer">
                                <div class="card border-left-warning shadow h-60 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg font-weight-bold text-warning text-uppercase mb-1">
                                                    Lớp học
                                                </div>
                                                <div class="h4 mb-0 font-weight-bold text-gray-800">
                                                    @ListCount["CountClass"]
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-tasks fa-3x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!--  Ngành học -->
                        <!--<div class="col-xl-3 col-md-6 mb-4">
        <a href="@Url.Action("SpecialityManager")" style="cursor:pointer">
            <div class="card border-left-primary shadow h-60 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-lg font-weight-bold text-primary text-uppercase mb-1">
                                Ngành học
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">
                                @ListCount["CountSpeciality"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-book fa-3x text-gray-400"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>-->
                        <!--  Môn học -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <a href="@Url.Action("SubjectManager")" style="cursor:pointer">
                                <div class="card border-left-success shadow h-60 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg font-weight-bold text-success text-uppercase mb-1">
                                                    Môn học
                                                </div>
                                                <div class="h4 mb-0 font-weight-bold text-gray-800">

                                                    @ListCount["CountSubject"]
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-book fa-3x text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!--Câu hỏi -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <a href="@Url.Action("QuestionManager")">
                                <div class="card border-left-info shadow h-60 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg font-weight-bold text-info text-uppercase mb-1">
                                                    Câu hỏi
                                                </div>
                                                <div class="h4 mb-0 font-weight-bold text-gray-800">

                                                    @ListCount["CountQuestion"]
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-question fa-3x text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!--  Bài thi -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <a href="@Url.Action("TestManager")" style="cursor:pointer">
                                <div class="card border-left-info shadow h-60 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg font-weight-bold text-info text-uppercase mb-1">
                                                    Bài thi
                                                </div>
                                                <div class="h4 mb-0 font-weight-bold text-gray-800">
                                                    @ListCount["CountTest"]
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-hourglass fa-3x text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        <!--  Đề luyện tập -->
                        <div class="col-xl-3 col-md-6 mb-4">
                            <a href="@Url.Action("DeLTManager")" style="cursor:pointer">
                                <div class="card border-left-info shadow h-60 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-lg font-weight-bold text-info text-uppercase mb-1">
                                                   Đề luyện tập
                                                </div>
                                                <div class="h4 mb-0 font-weight-bold text-gray-800">
                                                    @ListCount["CountDeLT"]
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa fa-hourglass fa-3x text-gray-400"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>



                    </div>

                    <!-- Content Row -->

                    <div class="row">

                        <!-- Area Chart -->
                        <div class="col-xl-8 col-lg-7">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Earnings Overview</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                             aria-labelledby="dropdownMenuLink">
                                            <div class="dropdown-header">Dropdown Header:</div>
                                            <a class="dropdown-item" href="#">Action</a>
                                            <a class="dropdown-item" href="#">Another action</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="#">Something else here</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="chart-area">
                                        <canvas id="myAreaChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pie Chart -->
                        <div class="col-xl-4 col-lg-5">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Revenue Sources</h6>
                                    <div class="dropdown no-arrow">
                                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                             aria-labelledby="dropdownMenuLink">
                                            <div class="dropdown-header">Dropdown Header:</div>
                                            <a class="dropdown-item" href="#">Action</a>
                                            <a class="dropdown-item" href="#">Another action</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="#">Something else here</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="chart-pie pt-4 pb-2">
                                        <canvas id="myPieChart"></canvas>
                                    </div>
                                    <div class="mt-4 text-center small">
                                        <span class="mr-2">
                                            <i class="fas fa-circle text-primary"></i> Direct
                                        </span>
                                        <span class="mr-2">
                                            <i class="fas fa-circle text-success"></i> Social
                                        </span>
                                        <span class="mr-2">
                                            <i class="fas fa-circle text-info"></i> Referral
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->
            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>


</body>

</html>

