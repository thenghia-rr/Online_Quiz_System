</head>

<header style="width: 100%; height: 80px; background-color: #fefcfc; display: flex">
    <div style="margin: auto 8px">
        <a href="/Home/Index">
            <img src="~/Assets/LandingPage/img/logo2.jpg" height="80px" style="margin-left: 20px" alt="Alternate Text" />
        </a>
    </div>
    <div class="navbar-nav" style="; margin: auto auto ">
        <a href="/Home/Index" class="nav-item1"> Trang chủ</a>
        <a href="/Home/About" class="nav-item1"> Thông tin </a>
        <a href="/Teacher/Index" class="nav-item1"> Đề thi  </a>
        <a href="/Teacher/DeLuyenTap" class="nav-item1"> Luyện tập </a>
        <a href="/Home/LienHe" class="nav-item1"> Liên hệ </a>
    </div>

    <div class="navbar-nav1" style="margin: auto 50px">
        @{ if (@Session[UserSession.NAME] == null)
            {
<a href="/Login/Index" class="btn btn-primary px-4"> Đăng nhập &#10152;</a> }
            else
            {
                {
                    int role = (int)Session[UserSession.PERMISSION];
                    if (role == 1)
                    {
<span class="title_test">Xin chào: @Session[UserSession.NAME] </span>
                        <a href="/Admin/Logout" class="btn btn-dangxuat"> <i class="fa fa-power-off"></i>  Đăng Xuất  </a> }
                    else
                        if (role == 2)
                    {
<span class="title" style="color: black; margin: 10px 30px">Xin chào: @Session[UserSession.NAME] </span>
                        <a href="/Teacher/Logout" class="btn btn-dangxuat"> <i class="fa fa-power-off"></i>  Đăng Xuất  </a> }
                    else
                        if (role == 3)
                    {
<span class="title" style="color: black; margin: 10px 30px">Xin chào: @Session[UserSession.NAME] </span>
                        <a href="/Student/Logout" class="btn btn-dangxuat"> <i class="fa fa-power-off"></i>  Đăng Xuất  </a> }
                }
            } }
    </div>

</header>

<body class="body-login scrollbar">

    @RenderBody()

</body>

