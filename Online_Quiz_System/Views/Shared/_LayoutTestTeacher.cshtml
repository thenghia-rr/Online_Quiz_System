    <style>
        .nav-item1 {
            color: #00394f;
            padding: 30px 15px;
            cursor: pointer;
            font-family: "Nunito", sans-serif;
            font-weight: 700 !important;
        }

            .nav-item1:hover {
                color: #17a2b8;
            }

        footer {
            color: white;
            background-color: #00394f;
            font-family: "Handlee", cursive;
        }

        #footer_test {
            display: flex;
            padding: 50px 0;
        }

        #footer_row {
            display: flex;
            flex-wrap: wrap;
            margin-right: -15px;
            margin-left: -15px;
        }

        .text-pri {
            color: #17a2b8;
            font-size: 2.5rem;
            font-weight: bold;
        }

        .text-white{
            color: white;
        }
